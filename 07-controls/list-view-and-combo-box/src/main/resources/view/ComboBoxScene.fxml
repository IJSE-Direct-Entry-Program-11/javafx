<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" onKeyPressed="#rootOnKeyPressed" prefHeight="245.0" prefWidth="469.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep11.ComboBoxSceneController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Combo Box Demo">
         <font>
            <Font name="Ubuntu Bold" size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txtCountry" layoutX="14.0" layoutY="75.0" onAction="#txtCountryOnAction" prefHeight="24.0" prefWidth="213.0" promptText="Eg. Sri Lanka">
         <font>
            <Font name="Ubuntu" size="14.0" />
         </font>
      </TextField>
      <ComboBox fx:id="cbCountry" layoutX="242.0" layoutY="75.0" onAction="#cbCountryOnAction" onKeyPressed="#cbCountryOnKeyPressed" prefHeight="24.0" prefWidth="213.0" promptText="Select a country" style="-fx-font-family: Ubuntu; -fx-font-size: 14px;" />
      <Label layoutX="14.0" layoutY="49.0" text="Enter country to add">
         <font>
            <Font name="Ubuntu" size="14.0" />
         </font>
      </Label>
      <Label fx:id="lblCountry" alignment="CENTER" layoutX="14.0" layoutY="115.0" prefHeight="16.0" prefWidth="442.0" style="-fx-background-color: lightblue; -fx-background-radius: 10px;" text="-">
         <font>
            <Font name="Ubuntu" size="32.0" />
         </font>
      </Label>
      <VBox layoutX="168.0" layoutY="169.0" maxWidth="1.7976931348623157E308" spacing="10.0">
         <children>
            <Button fx:id="btnRemoveCountry" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnRemoveCountryOnAction" text="Remove Country">
               <font>
                  <Font name="Ubuntu" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnClearCountryList" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnClearCountryListOnAction" text="Clear Country List">
               <font>
                  <Font name="Ubuntu" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
